{
    "server": {
        "port": 3000,
        "host": "localhost"
    },
    "db": {
        "uri": "mongodb://localhost:27017/tv_tracker_v2"
    },
    "security": {
        "jwt": {
            "secret": "default_secret_change_in_production",
            "expiresIn": "7d"
        },
        "bcrypt": {
            "saltRounds": 12
        }
    },
    "cors": {
        "origin": ["http://localhost:3000", "http://localhost:3001"],
        "credentials": true
    },
    "rateLimit": {
        "windowMs": 900000,
        "max": 100,
        "authWindowMs": 900000,
        "authMax": 5
    },
    "logging": {
        "level": "info",
        "file": {
            "enabled": true,
            "path": "logs/app.log",
            "maxSize": "10m",
            "maxFiles": 5
        }
    },
    "swagger": {
        "enabled": true,
        "path": "/docs"
    }
}
