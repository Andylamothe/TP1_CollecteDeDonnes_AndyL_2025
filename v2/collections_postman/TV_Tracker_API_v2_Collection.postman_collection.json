{
    "info": {
        "name": "TV Tracker API v2",
        "description": "Collection Postman pour l'API RESTful TV Tracker v2",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{jwt_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "General",
            "item": [
                {
                    "name": "Get API Info",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/",
                            "host": ["{{base_url}}"],
                            "path": [""]
                        }
                    }
                },
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/health",
                            "host": ["{{base_url}}"],
                            "path": ["health"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('jwt_token', response.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v2/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "auth", "register"]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('jwt_token', response.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"user@tvtracker.com\",\n  \"password\": \"user123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v2/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "auth", "login"]
                        }
                    }
                },
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/auth/me",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "auth", "me"]
                        }
                    }
                },
                {
                    "name": "Update Profile",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"updated_username\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v2/auth/me",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "auth", "me"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Movies",
            "item": [
                {
                    "name": "Get All Movies",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/movies",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "movies"]
                        }
                    }
                },
                {
                    "name": "Get Movies with Filters",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/movies?title=inception&genre=Action&minYear=2010&maxYear=2020&page=1&limit=5",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "movies"],
                            "query": [
                                {
                                    "key": "title",
                                    "value": "inception"
                                },
                                {
                                    "key": "genre",
                                    "value": "Action"
                                },
                                {
                                    "key": "minYear",
                                    "value": "2010"
                                },
                                {
                                    "key": "maxYear",
                                    "value": "2020"
                                },
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "5"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Movie by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/movies/{{movie_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "movies", "{{movie_id}}"]
                        }
                    }
                },
                {
                    "name": "Create Movie (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Test Movie\",\n  \"genres\": [\"Action\", \"Drama\"],\n  \"synopsis\": \"A test movie for API testing\",\n  \"releaseDate\": \"2024-01-01\",\n  \"durationMin\": 120\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v2/movies",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "movies"]
                        }
                    }
                },
                {
                    "name": "Update Movie (Admin)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Test Movie\",\n  \"synopsis\": \"Updated synopsis\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v2/movies/{{movie_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "movies", "{{movie_id}}"]
                        }
                    }
                },
                {
                    "name": "Delete Movie (Admin)",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/movies/{{movie_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "movies", "{{movie_id}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Ratings",
            "item": [
                {
                    "name": "Create Rating",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"target\": \"movie\",\n  \"targetId\": \"{{movie_id}}\",\n  \"score\": 8,\n  \"review\": \"Excellent film with great acting and story.\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v2/ratings",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "ratings"]
                        }
                    }
                },
                {
                    "name": "Get Average Rating",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/ratings/avg/movie/{{movie_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "ratings", "avg", "movie", "{{movie_id}}"]
                        }
                    }
                },
                {
                    "name": "Get My Ratings",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/ratings/my?page=1&limit=10",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "ratings", "my"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Rating",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"score\": 9,\n  \"review\": \"Updated review - even better than I thought!\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/v2/ratings/{{rating_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "ratings", "{{rating_id}}"]
                        }
                    }
                },
                {
                    "name": "Delete Rating",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/v2/ratings/{{rating_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "v2", "ratings", "{{rating_id}}"]
                        }
                    }
                }
            ]
        },
